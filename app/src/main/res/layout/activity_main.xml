<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg"
              tools:context="swrc.io.docklink.activities.MainActivity">
    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="swrc.io.docklink.fragments.MainTypeFragment"
        android:id="@+id/fragment"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"></fragment>

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="swrc.io.docklink.fragments.MainContentFragment"
        android:id="@+id/fragment2"
        android:layout_gravity="center_vertical"
        android:layout_weight="8" />
</LinearLayout>
